# Environment Variables
PORT=5000
MONGODB_URI=mongodb://localhost:27017/chatbot-builder

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_CHANGE_THIS_IN_PRODUCTION_min_32_chars
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# WhatsApp Configuration (Twilio - for lead notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Stripe Payment (for subscriptions - optional for MVP)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Vector Database (optional - for advanced embeddings)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=chatbot-embeddings

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# App Settings
NODE_ENV=development
